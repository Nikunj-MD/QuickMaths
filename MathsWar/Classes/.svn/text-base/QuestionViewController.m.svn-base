- (void) hideTime:(NSNumber *)hide
{
    [UIView beginAnimations:nil context:nil];
    [UIView setAnimationDuration:0.2];
    [self.timeBG setAlpha:[hide intValue]];
    [self.lblTime setAlpha:[hide intValue]];
